page {
  background-color: #F4F4F4;
}
.m-index {
  position: absolute;
  color: #333333;
  width: 95%;
  padding: 0 0.5rem;
  height: 100%;
}
.m-head {
  font-size: 24px;
  font-weight: bold;
  display: flex;
  flex-direction: column;
}
.m-head text:nth-child(2) {
  font-size: 14px;
}
.m-detaild {
  position: relative;
  margin: 9.5rem 0;
  background-color: white;
  border-radius: 0.5rem;
  padding: 1rem 0 0.5rem 0;
  width: 100%;
  margin-bottom: 40rem;
}
.m-detaild view {
  display: flex;
  width: 100%;
}
.m-detaild .m-d-head {
  border-bottom: #ebebeb solid 1px;
  background-color: white;
  color: #999999;
  font-size: 14px;
}
.m-detaild .m-d-head view {
  width: 40%;
  display: flex;
  justify-content: center;
}
.m-detaild .m-d-head view:nth-last-child(1) {
  width: 5%;
}
.m-detaild .m-d-bill {
  color: #666666;
  margin: 0.5rem 0;
}
.m-detaild .m-d-bill view {
  width: 40%;
  display: flex;
  height: 2rem;
  justify-content: center;
  box-sizing: border-box;
  border-bottom: #ebebeb solid 1px;
}
.m-detaild .m-d-bill view:nth-last-child(1) {
  width: 12%;
}
.m-detaild .m-d-bill:nth-last-child(1) {
  margin-bottom: 2rem;
}
.m-budget {
  margin-top: 1rem;
  background-color: white;
  padding: 0.5rem 1rem;
}
.m-budget .m-b-body view:nth-child(2) {
  margin-top: 0.5rem;
  display: flex;
  justify-content: space-around;
}
.m-budget .m-b-body view:nth-child(2) ._li {
  list-style: none;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.m-total {
  width: 96%;
  display: flex;
  background-color: white;
  border-radius: 0.5rem;
  padding: 1rem 0 1rem 0;
  margin-top: 1rem;
  justify-content: space-around;
  box-shadow: 0.1rem 0.1rem 0.1rem #d4d4d4;
}
.m-total view {
  display: flex;
  flex-direction: column;
  align-items: center;
}

