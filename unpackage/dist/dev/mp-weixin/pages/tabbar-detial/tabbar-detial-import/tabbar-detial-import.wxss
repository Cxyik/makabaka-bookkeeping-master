page {
  background-color: #F4F4F4;
}
.save_btn {
  position: absolute;
  bottom: 2rem;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.poptype {
  background-color: white;
  padding: 1rem 1rem 5rem 1rem;
  margin: 0.5rem 0.5rem 0 0.5rem;
  border-radius: 0.5rem 0.5rem 0 0;
  height: 20rem;
  overflow: auto;
}
.poptype view {
  display: flex;
  align-items: center;
  padding: 0.5rem;
  border-bottom: #ededed solid 1px;
}
.poptype view image {
  width: 2rem;
  height: 2rem;
  margin-right: 0.5rem;
}
.popup {
  height: 30rem;
  overflow: auto;
  padding: 1rem 1rem 1rem 1rem;
  margin: 0.5rem 0.5rem 0 0.5rem;
  border-radius: 0.5rem 0.5rem 0 0;
  background-color: white;
  color: #333333;
  font-size: 15px;
  border: #d4d4d4 solid 1px;
}
.popup view view view {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 0.1rem;
  margin: 0.5rem 0;
  border-bottom: #d4d4d4 solid 1px;
}
.popup view view view view {
  border-bottom: none;
  box-sizing: border-box;
  width: 30%;
}
.popup view text:nth-child(2) {
  font-size: 13px;
}
.popup view input {
  text-align: right;
}
.m-img {
  height: 3rem;
  width: 3rem;
}
.m-head {
  margin: 0.8rem;
  background-color: white;
  border-radius: 0.5rem;
  padding: 0.8rem;
  display: flex;
  justify-content: space-around;
  font-weight: bold;
}
.m-foot {
  margin: 0.8rem;
  margin-top: 1rem;
}
.black {
  margin: 0 0 0.5rem 0;
  color: #337AEE;
}

