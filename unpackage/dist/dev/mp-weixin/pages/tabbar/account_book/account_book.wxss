.poptype {
  background-color: white;
  padding: 1rem 1rem 5rem 1rem;
  margin: 0.5rem 0.5rem 0 0.5rem;
  border-radius: 0.5rem 0.5rem 0 0;
  height: 20rem;
  overflow: auto;
}
.poptype view {
  display: flex;
  align-items: center;
  padding: 0.5rem;
  border-bottom: #ededed solid 1px;
}
.poptype view image {
  width: 2rem;
  height: 2rem;
  margin-right: 0.5rem;
}
.popup {
  padding: 1rem 1rem 1rem 1rem;
  margin: 0.5rem 0.5rem 0 0.5rem;
  border-radius: 0.5rem 0.5rem 0 0;
  background-color: white;
  color: #333333;
  font-size: 15px;
}
.popup view {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 0.1rem;
  margin: 0.8rem 0;
  border-bottom: #d4d4d4 solid 1px;
}
.popup view view {
  border-bottom: none;
  box-sizing: border-box;
  width: 30%;
}
.popup view text:nth-child(2) {
  font-size: 13px;
}
.popup view input {
  text-align: right;
}
.page {
  height: 100%;
}
page {
  background-color: #F4F4F4;
}
.popup-content {
  height: 20rem;
}
.text {
  margin: 1rem;
}
.m-main {
  padding-top: 9rem;
}
.dis_margin {
  margin-top: 4rem;
}
.m-index {
  color: #333333;
  width: 95%;
  padding: 0 0.5rem;
}
.add {
  bottom: 6rem;
  right: 2rem;
  position: fixed;
}
.add-nav {
  bottom: 7rem;
  right: 3rem;
  position: fixed;
}
.head {
  width: 96%;
  position: fixed;
  background-color: #F4F4F4;
  z-index: 2;
}
.m-head {
  display: flex;
  justify-content: space-between;
}
.m-head view:nth-child(1) {
  display: flex;
  flex-direction: column;
  font-weight: bold;
}
.m-head view:nth-child(1) view {
  display: flex;
  flex-direction: row;
}
.m-head view:nth-child(1) view:nth-child(1) {
  font-size: 24px;
}
.m-head view:nth-child(1) view:nth-child(2) {
  font-size: 13px;
}
.m-head view:nth-child(2) view {
  display: flex;
  color: #666666;
}
.m-total {
  font-size: 1rem;
  display: flex;
  background-color: white;
  border-radius: 0.5rem;
  padding: 1rem 0 1rem 0;
  margin-top: 0.5rem;
  justify-content: space-around;
  box-shadow: 0.1rem 0.1rem 0.1rem #d4d4d4;
}
.m-total view {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.m-bill {
  margin-top: 0.6rem;
}
.m-bill .m-b-date {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: #666666;
  margin-bottom: 0.1rem;
}
.m-bill .m-b-date view text {
  margin: 0.1rem;
}
.m-bill .m-b-detaild {
  background-color: white;
  border-radius: 0.4rem;
  margin-top: 0.2rem;
}
.m-bill .m-b-detaild view {
  display: flex;
  padding: 0.2rem 0.5rem 0.1rem 0.5rem;
  justify-content: space-between;
}

