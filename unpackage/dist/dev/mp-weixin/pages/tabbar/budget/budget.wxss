page {
  background-color: #F4F4F4;
}
.section {
  display: flex;
  align-items: center;
  margin: 0.5rem 0 0.5rem 0;
}
.section view:nth-child(1) {
  background-color: #E26E59;
  width: 0.3rem;
  height: 2rem;
  margin-right: 0.5rem;
  border-radius: 9rem;
}
.section text {
  display: block;
}
.popup-content {
  width: 20rem;
  border-radius: 1rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0.5rem 0;
  color: #333333;
}
.popup-content view {
  width: 18rem;
}
.m-index {
  color: #333333;
  width: 95%;
  padding: 0 0.5rem;
}
.m-b-head {
  display: flex;
  justify-content: space-between;
}
.m-b-head text:nth-child(2) {
  right: 2rem;
  color: #666666;
  font-size: 13px;
}
.m-head {
  font-size: 24px;
  font-weight: bold;
  display: flex;
  flex-direction: column;
  position: fixed;
  background-color: #F4F4F4;
  width: 100%;
  z-index: 99;
  margin-top: -3rem;
}
.m-budget {
  background-color: white;
  padding: 0.5rem 1rem;
  border-radius: 0.4rem;
  margin-top: 1rem;
}
.m-budget .m-b-body {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 0.5rem;
  font-size: 1rem;
}
.m-budget .m-b-body view:nth-child(2) {
  margin-top: 0.5rem;
  display: flex;
  justify-content: space-around;
}
.m-budget .m-b-body view:nth-child(2) ._li {
  list-style: none;
  display: flex;
  flex-direction: column;
  align-items: center;
}

