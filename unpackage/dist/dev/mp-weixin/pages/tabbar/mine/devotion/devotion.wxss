.big_circle{
		width: 4rem;
		height: 1.8rem;
		background-color: darkgray;
		border-radius: 2rem;
		position: absolute;
		top: 50%;
		-webkit-transform: translateY(-50%);
		        transform: translateY(-50%);
		right: 2rem;
}
.small_circle{
		transition: all 0.5s;
		width: 1.6rem;
		height: 1.6rem;
		background-color: white;
		border-radius: 50%;
		position: absolute;
		top: 50%;
		left: 0.1rem;
		-webkit-transform: translateY(-50%);
		        transform: translateY(-50%);
}
