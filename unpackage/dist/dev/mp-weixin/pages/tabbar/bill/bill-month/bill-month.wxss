page {
  background-color: #f4f4f4;
  color: #333333;
}
.m-chart {
  width: 100%;
  height: 20%;
}
.load {
  background: #fff;
  margin: 0.5rem;
  padding: 0.5rem;
  border-radius: 0.5rem;
}
.more {
  width: 100%;
  text-align: center;
}
.tranform {
  -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
}
.pay-rank {
  background-color: white;
  margin-top: 0.6rem;
  border-radius: 0.5rem;
  padding: 0.3rem;
}
.pay-rank .p-head {
  color: #999999;
  font-size: 14px;
  margin: 0.5rem 0 0.5rem 0;
}
.pay-rank .p-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #333333;
  padding: 0.3rem;
  border-bottom: #ebebeb solid 1px;
}
.pay-rank .p-item .p-left {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 36%;
  image-height: 0.8rem;
  image-width: 0.8rem;
}
.pay-rank .p-item .p-left .p-i-title {
  font-size: 15px;
  display: flex;
  flex-direction: column;
}
.pay-rank .p-item .p-left .p-i-title text:nth-child(2) {
  font-size: 12px;
  color: #999999;
}
.pay-rank .p-more:nth-child(n+5) {
  display: none;
}
.m-detaild {
  position: relative;
  margin: 1rem 0;
  background-color: white;
  border-radius: 0.5rem;
  padding: 1rem 0 0.5rem 0;
  width: 100%;
}
.m-detaild view {
  display: flex;
  width: 100%;
}
.m-detaild .m-d-head {
  border-bottom: #ebebeb solid 1px;
  background-color: white;
  color: #999999;
  font-size: 14px;
}
.m-detaild .m-d-head view {
  width: 40%;
  display: flex;
  justify-content: center;
}
.m-detaild .m-d-head view:nth-last-child(1) {
  width: 5%;
}
.m-detaild .m-d-bill {
  color: #666666;
  margin: 0.1rem 0;
}
.m-detaild .m-d-bill view {
  width: 40%;
  display: flex;
  height: 2rem;
  justify-content: center;
  box-sizing: border-box;
  border-bottom: #ebebeb solid 1px;
}
.m-detaild .m-d-bill view:nth-last-child(1) {
  width: 12%;
}
.m-index {
  padding: 0.5rem;
}
.m-surplus-card {
  padding: 0.3rem;
  background-color: white;
  border-radius: 0.5rem;
}
.m-surplus-card .m-title {
  width: 100%;
  color: #666666;
  text-align: center;
}
.m-surplus-card .m-total {
  flex-direction: row !important;
  justify-content: space-around !important;
}
.m-surplus-card .m-total image {
  width: 1rem;
  height: 1rem;
}
.m-surplus-card .m-total view {
  display: flex;
  justify-content: center;
}
.m-surplus-card .m-total view view {
  display: flex;
  flex-direction: row !important;
  align-items: center;
}
.m-surplus-card .m-head view {
  display: flex;
  flex-direction: column;
}
.m-surplus-card .m-head view text:nth-child(1) {
  color: #999999;
  font-size: 13px;
}
.m-surplus-card .m-head view text:nth-child(2) {
  margin: 0.3rem;
  font-weight: bold;
  font-size: 25px;
}

